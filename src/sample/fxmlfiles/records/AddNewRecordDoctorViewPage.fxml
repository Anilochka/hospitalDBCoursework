      <ComboBox fx:id="patientsChoice" layoutX="252.0" layoutY="122.0" prefWidth="150.0" />
      <TextField fx:id="Time" layoutX="253.0" layoutY="208.0" promptText="time" />
      <Label layoutX="182.0" layoutY="212.0" text="Время" />
      <Button fx:id="exit" layoutX="462.0" layoutY="360.0" mnemonicParsing="false" onAction="#onExit" prefHeight="18.0" prefWidth="106.0" text="Назад" />
